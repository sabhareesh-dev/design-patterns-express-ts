{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"esm": true
	}
}
